{
  "browser_specific_settings": {
    "gecko": {
      "id": "github-focus-alpha@farmdev.com"
    }
  },
  "manifest_version": 2,
  "name": "GitHub Focus",
  "version": "1.3.0",
  "description": "Receive desktop notifications for important GitHub activity",
  "icons": {
    "48": "icons/icons8-topic-push-notification-48.png",
    "64": "icons/icons8-topic-push-notification-64.png",
    "96": "icons/icons8-topic-push-notification-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "browser_action": {
    "default_icon": "icons/icons8-topic-push-notification-48.png",
    "default_title": "Check for GitHub notifications"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ]
}
